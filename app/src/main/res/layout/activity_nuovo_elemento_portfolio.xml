<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lScheda"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="TextView"
        android:textColor="#F69910"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editDescrizione"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lDescrizione"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:gravity="center|end"
        android:text="Descrizione"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.18" />

    <EditText
        android:id="@+id/editDescrizione"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="30"
        android:text="Lezioni Skate Base"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/lDescrizione"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/lNumeroLezioni"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:gravity="center|end"
        android:text="N. Lezioni"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lDescrizione"
        app:layout_constraintWidth_percent="0.18" />

    <EditText
        android:id="@+id/editNumeroLezioni"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="30"
        android:text="0"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/lNumeroLezioni"
        app:layout_constraintTop_toBottomOf="@+id/editDescrizione"
        app:layout_constraintWidth_percent="0.75" />

    <!-- Bottoni -->

    <Button
        android:id="@+id/bReset"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:background="#d0d0d0"
        android:text="Reset"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bSalva"
        app:layout_constraintWidth_percent="0.27" />

    <Button
        android:id="@+id/bExit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:background="#d0d0d0"
        android:text="Esci"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.30" />

    <Button
        android:id="@+id/bSalva"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:background="#d0d0d0"
        android:text="Salva"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bExit"
        app:layout_constraintWidth_percent="0.30" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNumeroLezioni">

        <RadioButton
            android:id="@+id/radio_skate"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:checked="true"
            android:text="Skate"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="268dp" />

        <RadioButton
            android:id="@+id/radio_basket"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Basket"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="329dp" />

        <RadioButton
            android:id="@+id/radio_pattini"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Pattini"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="329dp" />

        <RadioButton
            android:id="@+id/radio_pallavolo"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Pallavolo"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="329dp" />
    </RadioGroup>



</androidx.constraintlayout.widget.ConstraintLayout>