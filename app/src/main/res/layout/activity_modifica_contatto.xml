<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- NOME -->

    <TextView
        android:id="@+id/lScheda3"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Modifica Contatto"
        android:textColor="#F69910"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editNomeMod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lNome2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="50dp"
        android:gravity="center|end"
        android:text="Nome"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.18" />

    <!-- INDIRIZZO -->

    <EditText
        android:id="@+id/editNomeMod"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:gravity="left|center_vertical"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="30"
        android:text="XXXXX"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/lNome2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.20" />

    <TextView
        android:id="@+id/lIndirizzo2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:gravity="center|end"
        android:text="Indirizzo"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lNome2"
        app:layout_constraintWidth_percent="0.18" />

    <EditText
        android:id="@+id/editIndirizzoMod"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="left|center_vertical"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="30"
        android:text="XXXXXX"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/lIndirizzo2"
        app:layout_constraintTop_toBottomOf="@+id/editNomeMod"
        app:layout_constraintWidth_percent="0.80" />

    <!-- TELEFONO -->

    <TextView
        android:id="@+id/lTelefono2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:gravity="center|end"
        android:text="Telefono"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lIndirizzo2"
        app:layout_constraintWidth_percent="0.18" />

    <EditText
        android:id="@+id/editTelefonoMod"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="20"
        android:text="XXXXXXXX"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/lTelefono2"
        app:layout_constraintTop_toBottomOf="@+id/editIndirizzoMod"
        app:layout_constraintWidth_percent="0.80" />

    <!-- EMAIL -->

    <TextView
        android:id="@+id/lEmail2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:gravity="center|end"
        android:text="Email"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lTelefono2"
        app:layout_constraintWidth_percent="0.18" />

    <EditText
        android:id="@+id/editEmailMod"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="left|center_vertical"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="30"
        android:text="XXXXXXXX"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/lEmail2"
        app:layout_constraintTop_toBottomOf="@+id/editTelefonoMod"
        app:layout_constraintWidth_percent="0.80" />

    <!-- Bottoni -->

    <Button
        android:id="@+id/AnnullaModButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#d0d0d0"
        android:text="Annulla"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmailMod"
        app:layout_constraintWidth_percent="0.35" />

    <Button
        android:id="@+id/ExitModButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#d0d0d0"
        android:text="Esci"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/AnnullaModButton"
        app:layout_constraintTop_toBottomOf="@+id/editEmailMod"
        app:layout_constraintWidth_percent="0.17" />

    <Button
        android:id="@+id/EliminaModButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#d0d0d0"
        android:text="Elimina"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/SalvaModButton"
        app:layout_constraintTop_toBottomOf="@+id/editEmailMod"
        app:layout_constraintWidth_percent="0.2" />

    <Button
        android:id="@+id/SalvaModButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#d0d0d0"
        android:text="Salva"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/ExitModButton"
        app:layout_constraintTop_toBottomOf="@+id/editEmailMod"
        app:layout_constraintWidth_percent="0.17" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">
        <TableLayout
            android:id="@+id/tabellaElePortfolio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">
        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/NuovoElemModButton"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Nuovo elemento portfolio"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Elementi Portfolio"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SalvaModButton" />

</androidx.constraintlayout.widget.ConstraintLayout>