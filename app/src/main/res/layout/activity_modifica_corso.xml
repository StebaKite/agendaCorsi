<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AgendaCorsi">

    <TextView
        android:id="@+id/lScheda2"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Modifica Corso"
        android:textColor="#F69910"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editDescrizione"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- DESCRIZIONE -->

    <TextView
        android:id="@+id/lDescrizione"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="50dp"
        android:gravity="center|end"
        android:text="Descriz."
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.18" />
    <EditText
        android:id="@+id/editDescrizione"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="30"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/lDescrizione"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75" />

    <!-- DATA INIZIO -->

    <TextView
        android:id="@+id/lDataInizio"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:gravity="center|end"
        android:text="Inizio"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lDescrizione"
        app:layout_constraintWidth_percent="0.18" />

    <EditText
        android:id="@+id/editDataInizio"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="30"
        android:textSize="16sp"

        app:layout_constraintStart_toEndOf="@+id/lDataInizio"
        app:layout_constraintTop_toBottomOf="@+id/editDescrizione"
        app:layout_constraintWidth_percent="0.75" />

    <!-- DATA FINE -->

    <TextView
        android:id="@+id/lDataFine"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:gravity="center|end"
        android:text="Fine"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lDataInizio"
        app:layout_constraintWidth_percent="0.18" />

    <EditText
        android:id="@+id/editDataFine"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="30"
        android:textSize="16sp"

        app:layout_constraintStart_toEndOf="@+id/lDataFine"
        app:layout_constraintTop_toBottomOf="@+id/editDataInizio"
        app:layout_constraintWidth_percent="0.75" />





    <!-- Bottoni -->

    <Button
        android:id="@+id/bReset"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#d0d0d0"
        android:text="Annulla"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDataFine"
        app:layout_constraintWidth_percent="0.27" />

    <Button
        android:id="@+id/bExit"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#d0d0d0"
        android:text="Esci"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/bReset"
        app:layout_constraintTop_toBottomOf="@+id/editDataFine"
        app:layout_constraintWidth_percent="0.30" />

    <Button
        android:id="@+id/bElimina"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#d0d0d0"
        android:text="Elimina"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/bExit"
        app:layout_constraintTop_toBottomOf="@+id/editDataFine"
        app:layout_constraintWidth_percent="0.2" />

    <Button
        android:id="@+id/bSalva"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#d0d0d0"
        android:text="Salva"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/bElimina"
        app:layout_constraintTop_toBottomOf="@+id/editDataFine"
        app:layout_constraintWidth_percent="0.30" />

    <Button
        android:id="@+id/bChiudi"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#d0d0d0"
        android:text="Chiudi"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bReset"
        app:layout_constraintWidth_percent="0.30" />

    <Button
        android:id="@+id/bSospendi"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#d0d0d0"
        android:text="Sospendi"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/bChiudi"
        app:layout_constraintTop_toBottomOf="@+id/bReset"
        app:layout_constraintWidth_percent="0.30" />

    <Button
        android:id="@+id/bApri"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#d0d0d0"
        android:text="Apri"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/bSospendi"
        app:layout_constraintTop_toBottomOf="@+id/bReset"
        app:layout_constraintWidth_percent="0.30" />

    <!-- Fasce -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Fasce orarie"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bSospendi" />

    <ScrollView
        android:id="@+id/scrollViewTabellaFasce"
        android:layout_width="409dp"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableLayout
            android:id="@+id/tabellaFasce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:stretchColumns="0,1"></TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/NuovaFasciaButton"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Nuova fascia oraria"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>